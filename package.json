{
  "name": "react-esnext-skeleton",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "webpack": "webpack",
    "dev-server": "webpack-dev-server",
    "test": "jest",
    "typecheck": "flow check || exit 0",
    "docs": "esdoc -c esdoc.json",
    "lint": "eslint ."
  },
  "dependencies": {
    "babel-jest": "^18.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "@easy-webpack/config-common-chunks-simple": "^2.0.3",
    "@easy-webpack/config-env-development": "^2.1.6",
    "@easy-webpack/config-env-production": "^3.0.0",
    "@easy-webpack/core": "^2.0.1",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-preset-airbnb": "^2.1.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "esdoc": "^0.5.2",
    "esdoc-es7-plugin": "^0.0.3",
    "esdoc-flow-plugin": "^1.0.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.37.4",
    "html-webpack-plugin": "^2.26.0",
    "jest": "^18.1.0",
    "json-loader": "^0.5.4",
    "lodash-webpack-plugin": "^0.10.7",
    "react-addons-test-utils": "^15.4.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-server": "^2.2.0-rc.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "**/*.jsx",
      "!node_modules/**",
      "!public/**",
      "!docs/**",
      "!coverage/**",
      "!__tests__/**",
      "!.webpack-config/**",
      "!webpack.config.js"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testRegex": "/__tests__/.*\\.(js|jsx)$"
  }
}
